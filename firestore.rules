rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Helper function to check if user is superadmin
    function isSuperAdmin() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'superadmin';
    }
    
    // Helper function to check if user is premium
    function isPremium() {
      return isAuthenticated() && 
             get(/databases/$(database)/documents/users/$(request.auth.uid)).data.subscriptionStatus == 'premium';
    }
    
    // Helper function to check if user owns the resource
    function isOwner(userId) {
      return isAuthenticated() && request.auth.uid == userId;
    }
    
    // Users Collection
    match /users/{userId} {
      // Anyone authenticated can read any user profile (for public pages)
      allow read: if isAuthenticated();
      
      // Users can only write to their own document
      // Superadmins can write to any user document
      allow write: if isOwner(userId) || isSuperAdmin();
      
      // Prevent users from changing their own role (only superadmin can)
      allow update: if isOwner(userId) && 
                      (!request.resource.data.diff(resource.data).affectedKeys().hasAny(['role']));
    }
    
    // Subscriptions Collection
    match /subscriptions/{subId} {
      // Users can read their own subscriptions
      // Superadmins can read all subscriptions
      allow read: if isOwner(resource.data.userId) || isSuperAdmin();
      
      // Only superadmins can create/update/delete subscriptions
      allow write: if isSuperAdmin();
    }
    
    // Revenue Collection
    match /revenue/{revenueId} {
      // Users can read their own revenue entries
      // Superadmins can read all revenue
      allow read: if isOwner(resource.data.userId) || isSuperAdmin();
      
      // Users can create/update/delete their own revenue entries
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Partners Collection
    match /partners/{partnerId} {
      // Only superadmins can access partners
      allow read, write: if isSuperAdmin();
    }
    
    // Promo Codes Collection
    match /promoCodes/{codeId} {
      // Anyone can read promo codes (to validate them)
      allow read: if isAuthenticated();
      
      // Only superadmins can create/update/delete promo codes
      allow write: if isSuperAdmin();
    }
    
    // Logs Collection
    match /logs/{logId} {
      // Only superadmins can read logs
      allow read: if isSuperAdmin();
      
      // System can write logs (authenticated users can create logs)
      allow create: if isAuthenticated();
      
      // Only superadmins can update/delete logs
      allow update, delete: if isSuperAdmin();
    }
    
    // Links Collection (for user's public links)
    match /links/{linkId} {
      // Anyone can read links (for public pages)
      allow read: if true;
      
      // Users can create their own links
      // Link limit enforcement moved to client-side
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Analytics Collection (for tracking clicks)
    match /analytics/{analyticsId} {
      // Users can read their own analytics
      allow read: if isOwner(resource.data.userId) || isSuperAdmin();
      
      // System can write analytics (anyone can create click events)
      allow create: if true;
      
      // Only owners can update/delete
      allow update, delete: if isOwner(resource.data.userId);
    }
    
    // Short Links Collection (for link shortener)
    match /shortLinks/{linkId} {
      // Anyone can read (for redirects)
      allow read: if true;
      
      // Only authenticated users can create
      allow create: if isAuthenticated() && 
                      request.resource.data.userId == request.auth.uid;
      
      // Only owners can update/delete
      allow update, delete: if isOwner(resource.data.userId);
    }
  }
}
